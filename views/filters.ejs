<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Responsive Navbar with Dynamic Translation</title>
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/google-translate-open-api"></script>
    <script src="https://cdn.statically.io/gh/vidya-hub/open-google-translator/main/dist/bundle.js"></script>
    <link href="/stylesheets/landingpage.css" rel = "stylesheet">
    <script src="/javascripts/landingpage.js"></script>
    <style>

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        @keyframes fadeIn {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        :root {
            --primary-color: #2563eb;
            --secondary-color: #1e40af;
            --background-color: #f3f4f6;
            --text-color: #1f2937;
            --border-color: #e5e7eb;
        }

        body {
            background-color: var(--background-color);
            min-height: 100vh;
        }
    </style>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const profileButton = document.getElementById("avatarButton");
            const profileDropdown = document.getElementById("userDropdown");
            const closeProfile = document.getElementById("close-profile");
            // Toggle profile dropdown visibility
            profileButton.addEventListener("click", () => {
                profileDropdown.classList.toggle("hidden");
            });
            // Close profile dropdown
            closeProfile.addEventListener("click", () => {
                profileDropdown.classList.add("hidden");
            });

        });

        document.getElementById('avatarButton').addEventListener('click', () => {
            const dropdown = document.getElementById('userDropdown');
            dropdown.classList.toggle('hidden');
        });
    </script>
    <style>
        #userDropdown {
            z-index: 50;
            position: absolute;
            right: 0;
        }
        html {
            scroll-behavior: smooth;
        }
    </style>
</head>

<body class="bg-gray-100 dark:bg-gray-900">
<!-- Navbar -->

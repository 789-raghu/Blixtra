<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Multi-Step Form with Tailwind</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-blue-500 to-green-200 h-screen flex items-center justify-center">
<div class="bg-white p-8 rounded-lg shadow-lg w-1/2">
    <h1 class="text-2xl font-bold text-center mb-6">Multi-Step Registration Form</h1>
    <div class="flex items-center justify-between mb-8">
        <div class="flex-1 flex items-center">
            <div id="step-1-indicator" class="w-10 h-10 flex items-center justify-center bg-blue-500 text-white rounded-full">1</div>
            <div class="flex-1 h-1 bg-gray-300 mx-2"></div>
        </div>
        <div class="flex-1 flex items-center">
            <div id="step-2-indicator" class="w-10 h-10 flex items-center justify-center bg-gray-300 text-gray-500 rounded-full">2</div>
            <div class="flex-1 h-1 bg-gray-300 mx-2"></div>
        </div>
        <div class="flex-1 flex items-center">
            <div id="step-3-indicator" class="w-10 h-10 flex items-center justify-center bg-gray-300 text-gray-500 rounded-full">3</div>
            <div class="flex-1 h-1 bg-gray-300 mx-2"></div>
        </div>
        <div class="flex-1 flex items-center">
            <div id="step-4-indicator" class="w-10 h-10 flex items-center justify-center bg-gray-300 text-gray-500 rounded-full">4</div>
        </div>
    </div>

    <!-- Form Steps -->
    <form id="registrationForm">
        <!-- Step 1 -->
        <div class="form-page active" id="step-1">
            <h2 class="text-lg font-semibold mb-4">Step 1: Basic Information</h2>
            <input type="text" class="w-full border-b-2 p-2 mb-4 outline-none" placeholder="Your Name" required />
            <input type="password" class="w-full border-b-2 p-2 mb-4 outline-none" placeholder="Password" required />
            <div class="flex justify-end">
                <button type="button" id="next-1" class="bg-blue-500 text-white py-2 px-4 rounded-lg">Next</button>
            </div>
        </div>

        <!-- Step 2 -->
        <div class="form-page hidden" id="step-2">
            <h2 class="text-lg font-semibold mb-4">Step 2: Address Information</h2>
            <input type="text" class="w-full border-b-2 p-2 mb-4 outline-none" placeholder="Address" required />
            <div class="flex justify-between">
                <button type="button" id="prev-2" class="bg-gray-400 text-white py-2 px-4 rounded-lg">Previous</button>
                <button type="button" id="next-2" class="bg-blue-500 text-white py-2 px-4 rounded-lg">Next</button>
            </div>
        </div>

        <!-- Step 3 -->
        <div class="form-page hidden" id="step-3">
            <h2 class="text-lg font-semibold mb-4">Step 3: Demographics</h2>
            <select class="w-full border-b-2 p-2 mb-4 outline-none" required>
                <option value="">Select Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
            <input type="number" class="w-full border-b-2 p-2 mb-4 outline-none" placeholder="Age" required />
            <div class="flex justify-between">
                <button type="button" id="prev-3" class="bg-gray-400 text-white py-2 px-4 rounded-lg">Previous</button>
                <button type="button" id="next-3" class="bg-blue-500 text-white py-2 px-4 rounded-lg">Next</button>
            </div>
        </div>

        <!-- Step 4 -->
        <div class="form-page hidden" id="step-4">
            <h2 class="text-lg font-semibold mb-4">Step 4: Final Details</h2>
            <input type="text" class="w-full border-b-2 p-2 mb-4 outline-none" placeholder="Occupation" required />
            <div class="flex justify-between">
                <button type="button" id="prev-4" class="bg-gray-400 text-white py-2 px-4 rounded-lg">Previous</button>
                <button type="submit" class="bg-green-500 text-white py-2 px-4 rounded-lg">Submit</button>
            </div>
        </div>
    </form>
</div>

<script>
    const steps = document.querySelectorAll('.form-page');
    const indicators = [
        document.getElementById('step-1-indicator'),
        document.getElementById('step-2-indicator'),
        document.getElementById('step-3-indicator'),
        document.getElementById('step-4-indicator'),
    ];
    let currentStep = 0;

    function showStep(step) {
        steps.forEach((page, index) => {
            page.classList.toggle('hidden', index !== step);
            indicators[index].classList.toggle('bg-blue-500', index <= step);
            indicators[index].classList.toggle('text-white', index <= step);
            indicators[index].classList.toggle('bg-gray-300', index > step);
            indicators[index].classList.toggle('text-gray-500', index > step);
        });
    }

    document.getElementById('next-1').addEventListener('click', () => {
        currentStep++;
        showStep(currentStep);
    });

    document.getElementById('prev-2').addEventListener('click', () => {
        currentStep--;
        showStep(currentStep);
    });

    document.getElementById('next-2').addEventListener('click', () => {
        currentStep++;
        showStep(currentStep);
    });

    document.getElementById('prev-3').addEventListener('click', () => {
        currentStep--;
        showStep(currentStep);
    });

    document.getElementById('next-3').addEventListener('click', () => {
        currentStep++;
        showStep(currentStep);
    });

    document.getElementById('prev-4').addEventListener('click', () => {
        currentStep--;
        showStep(currentStep);
    });
</script>
</body>
</html>
